# Environment Configuration for Intelligent Book Management System
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_URL=postgresql://bookmanager:bookpassword@localhost:5432/book_management

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-at-least-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Configuration
LLAMA_MODEL_PATH=meta-llama/Llama-2-7b-chat-hf
LLAMA_MAX_LENGTH=512
LLAMA_TEMPERATURE=0.7

# OpenRouter API Configuration (Optional - for enhanced AI features)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=meta-llama/llama-3-8b-instruct:free

# Application Configuration
PROJECT_NAME=Intelligent Book Management System
VERSION=1.0.0
DESCRIPTION=AI-powered book management with recommendations and summaries
API_V1_STR=/api/v1

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration (for development)
ALLOWED_HOSTS=*
